@model List<BO.Employee>

@{
    ViewBag.Title = "MultipleRecords";
}

<h2>MultipleRecords</h2>

@using (Html.BeginForm("MultipleRecords", "EmpCRUD", FormMethod.Post))
{
    <div><a href="#" id="addNew">Add New</a></div>

    <div class="row">
        <div class="col-xs-2">
            <label>Name</label>
        </div>
        <div class="col-xs-2">
            <label>Age</label>
        </div>
        <div class="col-xs-2">
            <label>Salary</label>
        </div>
        <div class="col-xs-2">
            <label>Dept ID</label>
        </div>
        <div class="col-xs-2">
            <label>Date Of Joining</label>
        </div>
    </div>

    for(int i = 0; i < 2; i++)
    {

        <div class="row">
            <div class="col-xs-2">
                @Html.EditorFor(Model => Model[i].Name)
            </div>
            <div class="col-xs-2">
                @Html.EditorFor(Model => Model[i].Age)
            </div>
            <div class="col-xs-2">
                @Html.EditorFor(Model => Model[i].Salary)
            </div>
            <div class="col-xs-2">
                @Html.EditorFor(Model => Model[i].Did)
            </div>
            <div class="col-xs-2">
                @Html.EditorFor(Model => Model[i].DOJ)
            </div>
        </div>
    }
    <input type="submit" value="insert" />
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
